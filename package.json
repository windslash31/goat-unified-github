{
    "name": "employee-dashboard",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "packages/client",
      "packages/server"
    ],
    "scripts": {
        "dev": "npm-run-all --parallel dev:server dev:client",
        "dev:server": "dotenv -e ./.env.server -- npm run start --workspace=packages/server",
        "dev:client": "npm run start --workspace=packages/client"
    },
    "devDependencies": {
      "dotenv-cli": "^7.4.4",
      "npm-run-all": "^4.1.5"
    }
  }